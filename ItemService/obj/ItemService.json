{
  "openapi": "3.0.1",
  "info": {
    "title": "Seller API",
    "description": "Provides services to seller",
    "termsOfService": "https://seller.com/terms",
    "contact": {
      "name": "Team 4AA",
      "url": "https://seller.com/spboyer",
      "email": ""
    },
    "license": {
      "name": "Use under LICX",
      "url": "https://seller.com/license"
    },
    "version": "v1"
  },
  "paths": {
    "/api/Item/AddItem": {
      "post": {
        "tags": [
          "Item"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ItemDetails"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ItemDetails"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ItemDetails"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Item/UpdateItem": {
      "put": {
        "tags": [
          "Item"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ItemDetails"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ItemDetails"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ItemDetails"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Item/DeleteItem/{itemid}": {
      "delete": {
        "tags": [
          "Item"
        ],
        "parameters": [
          {
            "name": "itemid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Item/ViewItems/{sellerid}": {
      "get": {
        "tags": [
          "Item"
        ],
        "parameters": [
          {
            "name": "sellerid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ItemDetails": {
        "type": "object",
        "properties": {
          "itemid": {
            "type": "integer",
            "format": "int32"
          },
          "price": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "itemname": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "stockno": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "remarks": {
            "type": "string",
            "nullable": true
          },
          "sellerid": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "imagename": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}